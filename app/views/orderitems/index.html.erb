<p id="notice"><%= notice %></p>

<h1>Orderitems</h1>

<table>
  <thead>
    <tr>
      <th>Item_id</th>
      <th>Cart_id</th>
      <th>Order</th>
      <th>Product</th>
      <th>Quantity</th>
      <th>Subtotal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orderitems.each do |orderitem| %>
      <tr>
        <td><%= orderitem.id %></td>
         <td><%= orderitem.cart_id %></td>
        <td><%= orderitem.order_id %></td>
        <td><%= orderitem.product_id %></td>
        <td><%= orderitem.quantity %></td>
        <td><%= orderitem.subtotal %></td>
        <td><%= link_to 'Show', orderitem %></td>
        <td><%= link_to 'Edit', edit_orderitem_path(orderitem) %></td>
        <td><%= link_to 'Destroy', orderitem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

